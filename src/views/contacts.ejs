<!DOCTYPE html>
<html lang="en">
  <%- include ("./snippets/head.ejs") -%>
  <body>
    <%- include ("./snippets/navbar.ejs") -%>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg- my-3">
          <h1 class="text-center">Agenda</h1>
          <p class="text-center lead">Create or edit contacts</p>

          <%- include ("./snippets/messages.ejs") %>

          <% if (contact._id) { %>
            <form action="/contacts/edit/<%= contact._id %> " method="POST">
            <% } else {%>
            <form action="/contacts/register" method="POST">
          <%}%>
            <input type="hidden" name="_csrf" value=<%= csrfToken %> >
            <div class="form-group">
              <label for="name">Name</label>
              <input
                type="text"
                class="form-control"
                id="new-contact-name"
                name="name"
                value="<%= contact.name %>"
                />
              </div>
              <div class="form-group">
                <label for="name">Surname</label>
                <input
                type="text"
                class="form-control"
                id="new-contact-surname"
                name="surname"
                value="<%= contact.surname %>"
                />
              </div>
              <div class="form-group">
                <label for="email">E-mail</label>
                <input
                type="email"
                class="form-control"
                id="new-contact-email"
                name="email"
                value="<%= contact.email %>"
                />
              </div>
              <div class="form-group">
                <label for="number">Telephone number</label>
                <input
                type="tel"
                class="form-control"
                id="new-contact-number"
                name="number"
                value="<%= contact.number %>"
              />
            </div>
            <% if (contact._id) { %>
              <button type="submit" class="btn btn-primary">Update</button>
              <% } else {%>
              <button type="submit" class="btn btn-primary">Add</button>
            <%}%>
          </form>
        </div>
        <div class="col-lg-2"></div>
      </div>
    </div>

    <%- include ("./snippets/footer.ejs") -%>
  </body>
</html>
