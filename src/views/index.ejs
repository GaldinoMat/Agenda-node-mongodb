<!DOCTYPE html>
<html lang="en">
  <%- include ("./snippets/head.ejs") -%>
  <body>
    <%- include ("./snippets/navbar.ejs") -%>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg- my-3">
          <h1 class="text-center">Agenda</h1>
          <p class="text-center lead">Your contacts</p>

          <%- include ("./snippets/messages.ejs") %>

          <% if (contacts.length > 0) { %>
            <div class="responsive-table">
              <table class="table my-3">
                <% contacts.forEach(contact => { %>
                <tr>
                  <td><%= contact.name %></td>
                  <td><%= contact.surname %></td>
                  <td><%= contact.number %></td>
                  <td><%= contact.email %></td>
                  <td><a href="/contacts/index/<%= contact._id %>">Edit</a></td>
                  <td><a class="text-danger" href="/contacts/delete/<%= contact._id %>">Remove</a></td>
                </tr>
                <% }) %>
              </table>
            </div>
          <% } else { %>
            <p class="text-center lead">No contacts were found. Start by adding new contacts in the "Add a contact" tab.</p>
          <% }%>
        </div>
        <div class="col-lg-2"></div>
      </div>
    </div>

    <%- include ("./snippets/footer.ejs") -%>
  </body>
</html>
